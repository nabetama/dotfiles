" PEP 8 Indent rule
setl fileencoding=utf-8
setl tabstop=4
setl softtabstop=4
setl shiftwidth=4
setl smarttab
"setl cinwords=if, elif, else, for, while, try, except, finally, def, class
setl expandtab
setl autoindent
setl nosmartindent
setl cindent
"setl textwidth=80
setl colorcolumn=99

" Folding
setl foldmethod=indent
setl foldlevel=99
