{
  "coc.preferences.formatOnSaveFiletypes": [
    "css",
    "html",
    "markdown",
    "typesscriptreact",
    "typescript",
    "javascriptreact",
    "javascript",
    "json",
    "graphql"
  ],
  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.work", "go.mod", ".vim/", ".git", ".hg/"],
      "filetypes": ["go"],
      "initializationsOptions": {
        "usePlaceholders": true
      }
    }
  }
}
